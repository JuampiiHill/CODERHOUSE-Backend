<div class="col col-lg-12 mt-4">
  <div class="row">
    <h1 class="text-center">Changuito</h1>
  </div>
</div>

<div class="col col-lg-12 col-md-8 col-sm-4 mt-4">
  <div class="row">
    <table class="table table-dark table-striped">
      <thead>
        <tr class="table-primary">
          <th scope="col">Producto</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Precio</th>
          <th scope="col">Codigo</th>
          <th scope="col">Stock</th>
          <th scope="col">Categoria</th>
          <th scope="col">Quantity</th>
        </tr>
      </thead>
      <tbody>
        {{#if cart.products.length}}
        {{#each cart.products}}
        <tr>
          <td>{{this.product.title}}</td>
          <td>{{this.product.description}}</td>
          <td>{{this.product.price}}</td>
          <td>{{this.product.code}}</td>
          <td>{{this.product.stock}}</td>
          <td>{{this.product.category}}</td>
          <td>{{this.quantity}}</td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
          <td colspan='9'>No se encontraron productos.</td>
        </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>
